@using R5T.R0004.Internal

@namespace R5T.R0004


 <TableOfContentsContent
    Identity="@this.Identity"
    Text="@this.Text"
    Level="@this.Level" />


@code {
    /// <summary>
    /// Just include the same content as from inside the heading element.
    /// </summary>
    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public int Level { get; set; }

    public string Identity
    {
        get
        {
            var identity = Instances.HtmlIdentityOperator.GetHeadingIdentity(this.Text);
            return identity;
        }
    }
}